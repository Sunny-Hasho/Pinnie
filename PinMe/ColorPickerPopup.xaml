<Window x:Class="PinWin.ColorPickerPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColorPicker" Height="Auto" Width="200"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False" SizeToContent="Height"
        ShowActivated="False"
        Deactivated="Window_Deactivated" FontFamily="Segoe UI">
    <Window.Resources>
        <Style x:Key="ColorButtonStyle" TargetType="Border">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </Window.Resources>

    <Border Background="#2B2B2B" CornerRadius="8" BorderThickness="1" BorderBrush="#444" Margin="10" Padding="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="2" Opacity="0.3"/>
        </Border.Effect>
        <UniformGrid x:Name="ColorGrid" Columns="8"/>
    </Border>
</Window>
