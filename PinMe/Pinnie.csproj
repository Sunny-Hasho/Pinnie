<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <UseWindowsForms>true</UseWindowsForms>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    
    <!-- Metadata -->
    <Authors>Open Source Contributor</Authors>
    <Product>PinMe - Always On Top Utility</Product>
    <Description>A robust Windows utility to pin windows on top with visual feedback and glitch-free stacking.</Description>
    <Version>1.0.0</Version>
    <RepositoryUrl>https://github.com/your-username/PinMe</RepositoryUrl>
    <ApplicationIcon>app_icon.ico</ApplicationIcon>
    <Win32Icon>app_icon.ico</Win32Icon>
  </PropertyGroup>

  <ItemGroup>
    <Resource Include="Assets\Orange-Car.gif" />
    <Content Include="Assets\capy.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\cat.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Assets\guinea.gif">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <None Include="Assets\mixkit-gear-fast-lock-tap-2857.wav">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <Content Include="app_icon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="WpfAnimatedGif" Version="2.0.2" />
  </ItemGroup>

</Project>
